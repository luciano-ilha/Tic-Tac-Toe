#!/usr/bin/env ruby

puts 'Are you ready for a game of tic tac toe?'

board = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]
valid_moves = %w[x o]
puts 'What is your name p1?: '
player1 = gets.chomp.capitalize

puts 'What is your name p2?: '
player2 = gets.chomp.capitalize

5.times do
  puts 'Player One make your move: '
  p1_choice = gets.chomp.downcase
  if valid_moves.include?(p1_choice)
    p board[0]
    p board[1]
    p board[2]
  else
    puts 'Invalid move'
  end

  puts 'Player Two make your move: '
  p2_choice = gets.chomp.downcase
  if valid_moves.include?(p2_choice)
    p board[0]
    p board[1]
    p board[2]
  else
    puts 'Invalid move'
  end
end

# if player 1 wins
puts "Player #{player1} wins!"
# if player 2 wins
puts "Player #{player2} wins!"
# incase of a draw
puts 'Looks like we have a stalemate'
