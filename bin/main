#!/usr/bin/env ruby

puts 'Are you ready for a game of tic tac toe?'

puts 'Player One make your move: '
player1 = gets.chomp!

puts 'Player Two make your move: '
player2 = gets.chomp!

# if player 1 wins
puts "Player #{player1} wins!"
# if player 2 wins
puts "Player #{player2} wins!"
# incase of a draw
puts 'Looks like we have a stalemate'
